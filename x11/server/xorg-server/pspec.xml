            <Dependency>xcb-util-wm-devel</Dependency>
            <Dependency>xcb-util-keysyms-devel</Dependency>
        </BuildDependencies>
        <Patches>
            <Patch level="1">default-module-path.patch</Patch>
            <Patch level="1">xorg-server-1.16.0-add_prime_support-1.patch</Patch>
            <Patch level="1">xorg-server-1.16.0-upstream_glamor_fix-1.patch</Patch>
