            <Dependency>bluez-libs-devel</Dependency>
        </BuildDependencies>
        <Patches>
            <Patch level="1">use-lpthread.patch</Patch>
            <Patch level="1">pilot-link-0.12.1-var.patch</Patch>
            <Patch level="1">pilot-link-0.12.2-open.patch</Patch>
