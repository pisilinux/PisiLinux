            <Dependency>atk-devel</Dependency>
            <Dependency>gdk-pixbuf-devel</Dependency>
        </BuildDependencies>
        <Patches>
            <Patch>lshw-02.13-gcc43.patch</Patch>
        </Patches>
    </Source>

