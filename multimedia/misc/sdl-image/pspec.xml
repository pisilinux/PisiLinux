        <BuildType>emul32</BuildType>
        <BuildDependencies>
            <Dependency>libsdl-32bit</Dependency>
            <Dependency>libpng-32bit</Dependency>
            <Dependency>libjpeg-turbo-32bit</Dependency>
            <Dependency>tiff-32bit</Dependency>
