 gint
 ceilm (gint a, gint b)
  /* return least multiple of b that is >= a */
-{
+ /*
+    & m = ceilm(a,b)
+    & a = b*m - r;
+    & m = a/b
+    % r = a%b
+    & -a = -b*m + r
+
+    & ceilm = (r == 0 ? b*m : (b+1)*m)
+  */
+ {
+#ifdef RLXTEST
+  printf("ceil: a %d, b %d, -(-a/b) %d,a/b+(a%b != 0 ? 1:0) %d,  fl %g\n",
+         a,b,
+         -((-a)/b),
+          a/b+(a%b != 0 ? 1:0),
+         ceil ((gdouble) a / b) );
+#endif
   return (b * ceil ((gdouble) a / b));
 }
 
