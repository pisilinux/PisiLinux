  /* return largest multiple of b that is <= a */
+ /*
+  & & m = floorm(a,b)
+    & a = b*m + r
+    &  0 <= r < b
+  */
 {
+#ifdef RLXTEST
+  printf("floorm: a/b %d, fl %g\n", a/b, floor ((gdouble) a / b));
+#endif
   return (b * floor ((gdouble) a / b));
