        <Files>
            <Path fileType="library">/usr/lib</Path>
            <Path fileType="doc">/usr/share/doc</Path>
        </Files>
    </Package>

    <Package>
        <Name>npth-devel</Name>
        <Summary>Development files for pth</Summary>
        <RuntimeDependencies>
