            <Dependency>cairo-devel</Dependency>
            <Dependency>pango-devel</Dependency>
            <Dependency>libIDL-devel</Dependency>
            <Dependency>gtk2-devel</Dependency>
            <Dependency>mit-kerberos</Dependency>
            <Dependency>hunspell-devel</Dependency>
            <Dependency>startup-notification-devel</Dependency>
            <Dependency>gnome-vfs</Dependency>
            <Dependency>libgnomeui</Dependency>
            <Dependency>libproxy-devel</Dependency>
            <Dependency>libnotify-devel</Dependency>
            <Dependency>alsa-lib-devel</Dependency>
            <Dependency>atk-devel</Dependency>
            <Dependency>fontconfig-devel</Dependency>
            <Dependency>gconf-devel</Dependency>
            <Dependency>gdk-pixbuf-devel</Dependency>
            <Dependency>libjpeg-turbo-devel</Dependency>
            <Dependency>libXrender-devel</Dependency>
            <Dependency>libXt-devel</Dependency>
            <Dependency>libXext-devel</Dependency>
            <Dependency>pixman-devel</Dependency>
            <Dependency>libevent-devel</Dependency>
            <Dependency>libvpx-devel</Dependency>
            <Dependency>pulseaudio-libs-devel</Dependency>
            <Dependency>gst-plugins-base-devel</Dependency>
            <Dependency>libXcomposite-devel</Dependency>

            <!-- those are checked by configure -->
            <Dependency>mesa-devel</Dependency>
            <Dependency>libSM-devel</Dependency>
        </BuildDependencies>
        <Patches>
            <Patch level="1">mozilla-pkgconfig.patch</Patch>

            <!-- Fedora Patches -->
            <Patch level="1">fedora/rhbz-966424.patch</Patch>

            <!-- Pisilinux -->
            <Patch level="1">pisilinux/zemberekput.diff</Patch>
        </Patches>
    </Source>

    <Package>
        <Name>xulrunner</Name>
        <RuntimeDependencies>
            <Dependency>atk</Dependency>
            <Dependency releaseFrom="13">nss</Dependency>
            <Dependency>gtk2</Dependency>
            <Dependency>cairo</Dependency>
            <Dependency>libXt</Dependency>
            <Dependency>pango</Dependency>
            <Dependency>uClibc</Dependency>
            <Dependency>libvpx</Dependency>
            <Dependency>libXext</Dependency>
            <Dependency>alsa-lib</Dependency>
            <Dependency>hunspell</Dependency>
            <Dependency>gnome-vfs</Dependency>
            <Dependency>libXfixes</Dependency>
            <Dependency>libXdamage</Dependency>
            <Dependency>fontconfig</Dependency>
            <Dependency>gdk-pixbuf</Dependency>
            <Dependency>libXrender</Dependency>
            <Dependency>libjpeg-turbo</Dependency>
            <Dependency>libXcomposite</Dependency>
            <Dependency>startup-notification</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="data">/etc/gre.d</Path>
            <Path fileType="executable">/usr/bin</Path>
            <Path fileType="data">/etc/ld.so.conf.d</Path>
            <Path fileType="library">/usr/lib/xulrunner-36*</Path>
            <Path fileType="library">/usr/lib/xulrunner-devel*</Path>
            <Path fileType="library">/usr/lib/xulrunner-INTERNAL_VERSION</Path>
        </Files>
        <AdditionalFiles>
            <AdditionalFile target="/usr/lib/xulrunner-36.0/defaults/pref/all-pisilinux.js" permission="0644" owner="root">all-pisilinux.js</AdditionalFile>
            <AdditionalFile target="/usr/lib/xulrunner-36.0/defaults/pref/lockdown.js" permission="0644" owner="root">toolkit-lockdown.js</AdditionalFile>
        </AdditionalFiles>
        <Provides>
            <COMAR script='package.py'>System.Package</COMAR>
        </Provides>
    </Package>

    <Package>
        <Name>xulrunner-devel</Name>
        <Summary>IDL and header files for xulrunner</Summary>
        <RuntimeDependencies>
            <Dependency release="current">xulrunner</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="data">/usr/lib/pkgconfig</Path>
            <Path fileType="header">/usr/include</Path>
            <Path fileType="data">/usr/share/idl</Path>
        </Files>
    </Package>

