            <Dependency>libtheora-devel</Dependency>
            <Dependency>libvisual-devel</Dependency>
            <Dependency>gobject-introspection-devel</Dependency>
            <Dependency>orc-devel</Dependency>
            <Dependency>gnome-vfs-devel</Dependency>
        </BuildDependencies>
    </Source>

