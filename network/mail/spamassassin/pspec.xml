    <Package>
        <Name>spamassassin</Name>
        <RuntimeDependencies>
            <Dependency>perl</Dependency>
            <Dependency>perl-Digest-SHA1</Dependency>
            <Dependency>perl-HTML-Parser</Dependency>
            <Dependency>perl-IP-Country</Dependency>
