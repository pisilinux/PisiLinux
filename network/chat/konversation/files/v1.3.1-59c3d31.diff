+QString IRCView::closeToTagString(TextHtmlData* data, const QString& _tag)
+{
+    QString ret;
+    QString tag;
+    int i = data->openHtmlTags.count() - 1;
+    //close all tags to _tag
+    for ( ; i >= 0 ; --i)
+    {
+        tag = data->openHtmlTags.at(i);
+        ret += "</" + tag + '>';
+        if (tag == _tag)
+        {
+            data->openHtmlTags.removeAt(i);
+            break;
+        }
+    }
+
+    // reopen relevant tags
+    ret += openTags(data, i);
+
+    return ret;
+}
+
+QString IRCView::openTags(TextHtmlData* data, int from)
+{
+    QString ret, tag;
+    int i = from;
+    for ( ;  i < data->openHtmlTags.count(); ++i)
+    {
+        tag = data->openHtmlTags.at(i);
+        if (tag == "font")
+        {
+            if (data->reverse)
+            {
+                ret += fontColorOpenTag(Preferences::self()->color(Preferences::TextViewBackground).name());
+            }
+            else
+            {
+                ret += fontColorOpenTag(data->lastFgColor);
+            }
+        }
+        else if (tag == "span")
+        {
+            if (data->reverse)
+            {
+                ret += spanColorOpenTag(data->defaultColor);
+            }
+            else
+            {
+                ret += spanColorOpenTag(data->lastBgColor);
+            }
+        }
+        else
+        {
+            ret += '<' + tag + '>';
+        }
+    }
+    return ret;
+}
+
+QString IRCView::closeTags(TextHtmlData* data)
+{
+    QString ret;
+    QListIterator< QString > i(data->openHtmlTags);
+    i.toBack();
+    while (i.hasPrevious())
+    {
+        ret += "</" + i.previous() + '>';
+    }
+    return ret;
+}
