            <Dependency>alsa-lib-devel</Dependency>
            <Dependency>audiofile-devel</Dependency>
        </BuildDependencies>
        <Patches>
            <Patch level="1">esound-0.2.38-drain.patch</Patch>
            <Patch level="1">esound-0.2.38-fix-open-macro.patch</Patch>
