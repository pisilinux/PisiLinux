            <Path fileType="library">/usr/lib</Path>
            <Path fileType="doc">/usr/share/doc</Path>
        </Files>
    </Package>

    <Package>
        <Name>tunepimp-devel</Name>
        <Summary>Development files for tunepimp</Summary>
        <RuntimeDependencies>
