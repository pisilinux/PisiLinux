        </Patches>
    </Source>

    <Package>
        <Name>libunique</Name>
        <RuntimeDependencies>
            <Dependency>gtk2</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="library">/usr/lib</Path>
