        </RuntimeDependencies>
        <Files>
            <Path fileType="data">/usr/lib/pkgconfig</Path>
            <Path fileType="header">/usr/include</Path>
        </Files>
    </Package>

    <Package>
        <Name>libunique-docs</Name>
        <IsA>data:doc</IsA>
        <Summary>Unique reference documents</Summary>
        <RuntimeDependencies>
            <Dependency releaseFrom="current">libunique</Dependency>
        </RuntimeDependencies>
