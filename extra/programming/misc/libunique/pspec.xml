        <BuildDependencies>
            <Dependency>gtk2-devel</Dependency>
            <Dependency>gtk-doc</Dependency>
        </BuildDependencies>
        <Patches>
            <Patch>99_ltmain_as-needed.patch</Patch>
            <!--<Patch level="0">libunique-2.90.1-fix-introspection.patch</Patch>-->
