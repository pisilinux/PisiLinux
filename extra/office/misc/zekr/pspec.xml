	  <Dependency>webkit-gtk2-devel</Dependency>
        </BuildDependencies>
        <Patches>
            <Patch level="0">use-webkitgtk.patch</Patch>
        </Patches>
    </Source>

    <Package>
        <Name>zekr</Name>
        <RuntimeDependencies>
            <Dependency>swt</Dependency> <!-- no remove -->
