        <RuntimeDependencies>
            <Dependency>libxkbfile</Dependency>
            <Dependency>libXi</Dependency>
            <Dependency>iso-codes</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="library">/usr/lib</Path>
