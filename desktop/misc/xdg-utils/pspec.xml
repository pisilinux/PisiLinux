            <!--<Patch level="1">fix-terminal-detection.patch</Patch>--> <!--Fixed-->
            <Patch level="1">drop-xmlto-stuff.patch</Patch>
        </Patches>
    </Source>

    <Package>
        <Name>xdg-utils</Name>
        <Files>
            <Path fileType="executable">/usr/bin</Path>
            <Path fileType="man">/usr/share/man</Path>
