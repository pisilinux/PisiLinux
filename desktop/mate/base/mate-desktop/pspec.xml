            <Dependency>mate-common</Dependency>
            <Dependency>mate-doc-utils</Dependency>
            <Dependency>libunique-devel</Dependency>
            <Dependency>libXrandr-devel</Dependency>
            <Dependency>gdk-pixbuf-devel</Dependency>
